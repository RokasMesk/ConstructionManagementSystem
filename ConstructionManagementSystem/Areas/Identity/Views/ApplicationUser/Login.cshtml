@model LoginVM


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">
                    Login Admin Portal
                </h2>
            </div>
        </div>
    </div>

<div class="card-body">
    <div border p-3">
            <form method="post">
                <div class="row">

                    <input asp-for="Email" class="form-control border-0 shadow mb-2" placeholder="Email" />
                    <input asp-for="Password" class="form-control border-0 shadow mb-3" placeholder="Password" type="password"/>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark form-control">Login</button>
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </form>
    </div>

</div>