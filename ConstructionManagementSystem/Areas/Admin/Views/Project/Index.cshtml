@model List<Project>


<div class="container">
    <div>
        <div class="row bg-dark">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Projects List
                </h2>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Project Name</th>
                <th scope="col">Project Description</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <th scope="row">@project.ProjectId</th>
                    <td>@project.ProjectName</td>
                    <td>@project.ProjectDescription</td>
                    <td>@project.StartDate</td>
                    <td>@project.EndDate</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-primary btn-dark mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Project" asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger btn-outline-dark mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Project" asp-action="Create" class="btn btn-outline-dark mt-2">
                <i class="bi bi-plus-circle"></i>  Create a new project
            </a>
        </div>
    </div>
</div>
