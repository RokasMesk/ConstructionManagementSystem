@model List<Worker>


<div class="container">
    <div>
        <div class="row bg-dark">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Workers List
                </h2>
            </div>
        </div>
    </div>
    
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Worker Title</th>
                <th scope="col">Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var worker in Model){
            <tr>
                <th scope="row">@worker.WorkerId</th>
                <td>@worker.Name</td>
                <td>@worker.LastName</td>
                <td>@worker.Title</td>
                <td>@worker.PhoneNumber</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Worker" asp-action="Edit" asp-route-id="@worker.WorkerId" class="btn btn-primary btn-dark mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Worker" asp-action="Delete" asp-route-id="@worker.WorkerId" class="btn btn-danger btn-outline-dark mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Worker" asp-action="RegisterWorker" class="btn btn-outline-dark mt-2">
                <i class="bi bi-plus-circle"></i>  Add a new worker
            </a>
        </div>
    </div>
</div>
