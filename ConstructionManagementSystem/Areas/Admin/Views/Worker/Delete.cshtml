@model Worker

<div class="card box-shadow m-2">
    <div class="card-header bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                Are you sure you want to delete this worker:
            </div>
        </div>
    </div>   
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div class="form-row align-items-center">
                    <!-- Ensure form-row uses align-items-center to maintain items on the same line -->
                    <div class="col-md-12 pb-2">
                        <label asp-for="Name" class="ms-2 pb-1"></label>
                        <input asp-for="Name" disabled class="form-control border-0 shadow" placeholder="Name" />

                    </div>
                    <div class="col-md-12 pb-2">
                        <label asp-for="LastName" class="ms-2 pb-1"></label>
                        <input asp-for="LastName" disabled class="form-control border-0 shadow" placeholder="Last Name" />

                    </div>

                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Worker" asp-action="Index" class="btn btn-outline-dark border-1 form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

